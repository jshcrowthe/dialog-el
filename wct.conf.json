{
  "plugins": {
    "local": {
      "browsers": [ "chrome" ]
    },
    "sauce": {
      "browsers": [
        {
          "browserName":  "internet explorer",
          "platform":     "Windows 8.1",
          "version":      "11"
        },
        {
          "browserName":  "safari",
          "platform":     "OS X 10.11",
          "version":      "10"
        },
        {
          "browserName":  "chrome",
          "platform":     "Linux"
        },
        {
          "browserName":  "firefox",
          "platform":     "Linux"
        }
      ]
    },
    "istanbul": {
      "dir": "./reports/coverage",
      "reporters": ["text", "text-summary", "lcov"],
      "include": [
        "**/fs-common-dialog-eol.html",
        "**/fs-dialog-eol.html"
      ],
      "exclude": [
        "**/bin/*",
        "**/bower_components/**/*",
        "**/demo/*",
        "**/locales/*",
        "**/reports/*",
        "**/test/*"
      ],
      "thresholds": {
        "global": {
          "statements": 0,
          "branches": 0,
          "functions": 0
        }
      }
    }
  }
}
